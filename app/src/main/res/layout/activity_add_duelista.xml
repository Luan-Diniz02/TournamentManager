<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".views.activity.AddDuelista">

    <EditText
        android:id="@+id/activity_add_duelista_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Duelista"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/activity_add_duelista_vitorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vitorias"
        android:inputType="number" />

    <EditText
        android:id="@+id/activity_add_duelista_derrotas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Derrotas"
        android:inputType="number" />

    <EditText
        android:id="@+id/activity_add_duelista_empates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Empates"
        android:inputType="number" />

