<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#333333">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Classificação -->
        <TextView
            android:id="@+id/item_duelista_classificacao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1º"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="start" />

        <!-- Nome do duelista -->
        <TextView
            android:id="@+id/item_duelista_nome"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="Duelista 3"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <!-- Estatísticas -->
        <TextView
            android:id="@+id/item_duelista_vitorias"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <TextView
            android:id="@+id/item_duelista_derrotas"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <TextView
            android:id="@+id/item_duelista_empates"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <TextView
            android:id="@+id/item_duelista_participacao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <!-- Pontos -->
        <TextView
            android:id="@+id/item_duelista_pontos_total"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="end" />
    </TableRow>
</androidx.cardview.widget.CardView>